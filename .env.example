# TRADINGO ENVIRONMENT CONFIGURATION
# Copy this file to .env and fill in your values

# Server Configuration
NODE_ENV=production
PORT=3000

# Database Configuration (MongoDB Atlas)
MONGODB_URI=mongodb+srv://username:password@cluster0.mongodb.net/tradingo?retryWrites=true&w=majority

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRE=7d

# Exchange API Keys (Testnet for development)
BINANCE_API_KEY=your_binance_testnet_api_key
BINANCE_SECRET_KEY=your_binance_testnet_secret_key

# Exchange Configuration
EXCHANGE_MODE=testnet  # testnet or mainnet
DEFAULT_SYMBOLS=BTCUSDT,ETHUSDT,BNBUSDT

# Trading Configuration
DEFAULT_STRATEGY=scalping
RISK_PER_TRADE=0.02  # 2% per trade
DAILY_LOSS_LIMIT=0.05  # 5% daily loss limit
MAX_TRADES_PER_DAY=20

# Frontend URLs
FRONTEND_URL=https://tradingo.vercel.app
ADMIN_URL=https://admin.tradingo.com

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Monitoring (Optional)
SENTRY_DSN=your-sentry-dsn
LOG_LEVEL=info

# Feature Flags
ENABLE_EMAIL_VERIFICATION=false
ENABLE_TWO_FACTOR=false
ENABLE_PAYMENTS=false
